<Page x:Class="StudentManagementSystem_WPF.EditStudentDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Edit Student Details">

    <Grid Background="#F9F9F9" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Student Details"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"
                   Grid.Row="0"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Width="400" Background="White"  Margin="0,0,0,0">
            <TextBlock Text="First Name"/>
            <TextBox x:Name="FirstNameBox" Height="30" Margin="0,5"/>

            <TextBlock Text="Last Name"/>
            <TextBox x:Name="LastNameBox" Height="30" Margin="0,5"/>

            <TextBlock Text="Date of Birth"/>
            <DatePicker x:Name="DOBPicker" Height="30" Margin="0,5"/>

            <Button Content="Save Changes"
                    Height="35"
                    Margin="0,10,0,0"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="SaveChanges_Click"/>
        </StackPanel>
    </Grid>
</Page>
