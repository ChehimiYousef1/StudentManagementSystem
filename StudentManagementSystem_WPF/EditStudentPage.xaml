<Page x:Class="StudentManagementSystem_WPF.EditStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Edit Student">

    <Grid Background="#F9F9F9" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Text="Edit Student"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"
                   Grid.Row="0"/>

        <!-- Search Panel -->
        <Border Grid.Row="1"
                HorizontalAlignment="Center"
                Width="400"
                Background="White"
                Padding="20"
                CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Search Student"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <!-- TextBox -->
                <TextBox x:Name="SearchBox"
                         Height="35"
                         FontSize="14"
                         TextChanged="SearchBox_TextChanged"/>

                <Button Content="Search"
                        Height="35"
                        Margin="0,10,0,0"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Search_Click"/>
            </StackPanel>
        </Border>

        <!-- Search Results DataGrid -->
        <DataGrid x:Name="SearchResultsList"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,20,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Date of Birth" Binding="{Binding DateOfBirth, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="50"/>
                <DataGridTemplateColumn Header="Edit" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit"
                                    Tag="{Binding Id}"
                                    Click="EditStudent_Click"
                                    Background="#2196F3"
                                    Foreground="White"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
