<Page x:Class="StudentManagementSystem_WPF.AddStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Add Student Page">
    <Grid Background="#F9F9F9">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Add New Student"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <!-- First Name -->
            <TextBlock Text="First Name:" FontWeight="Bold"/>
            <TextBox x:Name="FirstNameTextBox" Margin="0,5,0,15" Height="25"/>
            <!-- Last Name -->
            <TextBlock Text="Last Name:" FontWeight="Bold"/>
            <TextBox x:Name="LastNameTextBox" Margin="0,5,0,15" Height="25"/>
            <!-- Date of Birth -->
            <TextBlock Text="Date of Birth:" FontWeight="Bold"/>
            <DatePicker x:Name="DateOfBirthPicker" Margin="0,5,0,15" Height="25"/>
            <!-- Submit Button -->
            <Button Content="Add Student"
                    Width="150"
                    Height="35"
                    HorizontalAlignment="Center"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="AddStudent_Click"/>
        </StackPanel>
    </Grid>
</Page>