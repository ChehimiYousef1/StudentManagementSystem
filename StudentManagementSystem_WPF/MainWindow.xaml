<Window x:Class="StudentManagementSystem_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Management System" Height="500" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Welcome to Student Management System"
                   FontSize="24"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"
                   Grid.Row="0"/>

        <!-- Content Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- Frame -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar buttons -->
            <StackPanel Grid.Column="0" Background="#f0f0f0" Margin="10">
                <Button Content="Add Student" Width="200" Height="40" Margin="0,5" Click="GO_AddStudent_Click"/>
                <Button Content="Edit Student" Width="200" Height="40" Margin="0,5" Click="GO_EditStudent_Click"/>
                <Button Content="Delete Student" Width="200" Height="40" Margin="0,5" Click="GO_DeleteStudent_click"/>
                <Button Content="Search Student" Width="200" Height="40" Margin="0,5" Click="GO_SearchStudent_click"/>
                <Button Content="View All Students" Width="200" Height="40" Margin="0,5" Click="GO_View_All_Student_Click"/>
                <Button Content="Exit" Width="200" Height="40" Margin="0,5" Click="Exit_Click"/>
            </StackPanel>

            <!-- Frame for page navigation -->
            <Frame x:Name="MainFrame"
                   Grid.Column="1"
                   NavigationUIVisibility="Hidden"
                   Background="White"
                   Margin="10"/>
        </Grid>
    </Grid>
</Window>
    
